<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MovieDetail">

    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/moviepic"/>

    <TextView
            android:id="@+id/name_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Title:" />

    <TextView
            android:id="@+id/title_detail"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="" />

    <TextView
            android:id="@+id/overview_desc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Overview:" />

    <TextView
            android:id="@+id/overview_detail"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="" />

    <TextView
            android:id="@+id/language"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Language:" />

    <TextView
            android:id="@+id/language_detail"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="" />

    <TextView
            android:id="@+id/rel_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Release date:" />

    <TextView
            android:id="@+id/rel_date_detail"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="" />

    <TextView
            android:id="@+id/suitable"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Suitable for children below 13:" />

    <TextView
            android:id="@+id/suitable_detail"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="" />























</LinearLayout>
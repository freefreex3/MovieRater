<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/name_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Name" />

    <EditText
            android:id="@+id/name_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"
            android:hint="Enter the title of the movie"
    />

    <TextView
            android:id="@+id/desc_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Description" />

    <EditText
            android:id="@+id/desc_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"
            android:hint="Enter a short description of the movie"
    />

    <TextView
            android:id="@+id/lang_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Language" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radio_group"

    >

        <RadioButton android:id="@+id/radio1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="English"
                     android:checked="true"
                     />
        <RadioButton android:id="@+id/radio2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Chinese"
                    />
        <RadioButton android:id="@+id/radio3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Malay"
                     />
        <RadioButton android:id="@+id/radio4"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Tamil"
                     />
    </RadioGroup>

    <TextView
            android:id="@+id/rel_date_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Release Date" />

    <EditText
            android:id="@+id/rel_date_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"
            android:hint="Enter release date"/>


    <CheckBox android:id="@+id/checkbox_1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Not suitable for all audience"


              />

    <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <CheckBox android:id="@+id/checkbox_2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Violence"
                  android:layout_weight="0.7"
                  android:visibility="invisible"

                  />
        <CheckBox android:id="@+id/checkbox_3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Language used"
                  android:layout_weight="0.3"
                  android:visibility="invisible"
                  />
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
                android:id="@+id/button_id"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="ADD MOVIE"
                android:onClick="onBtnClicked"
        />


    </LinearLayout>




</LinearLayout>